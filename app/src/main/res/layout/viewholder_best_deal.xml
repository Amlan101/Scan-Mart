<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="185dp"
    android:background="@drawable/light_black_bg"
    android:layout_margin="8dp"
    android:layout_height="235dp">

    <ImageView
        android:id="@+id/imgBestDeals"
        android:layout_width="wrap_content"
        android:layout_height="135dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/favBtnBestDeals"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <ImageView
        android:id="@+id/favBtnBestDeals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:srcCompat="@drawable/favorite_green" />

    <TextView
        android:id="@+id/titleTxtViewBestDeals"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Title"
        app:layout_constraintTop_toBottomOf="@id/imgBestDeals"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textStyle="bold"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/addBestDealsBtn"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:text="+"
        android:gravity="center"
        android:background="@drawable/add_btn_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleTxtViewBestDeals"/>

    <TextView
        android:id="@+id/priceBestDealsTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$/kg"
        android:textColor="@color/yellow"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="4dp"
        app:layout_constraintStart_toStartOf="@id/titleTxtViewBestDeals"/>
</androidx.constraintlayout.widget.ConstraintLayout>